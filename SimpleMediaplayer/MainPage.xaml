<Page
    x:Name="RootPage"
    x:Class="SimpleMediaplayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleMediaplayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="RootPage_Loaded" >

    <Grid x:Name="RootPanel" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="Icon/Button/Mou.jpg" Stretch="Uniform" />
        <local:YMediaPlayer x:Name="_MediaPlayer" AreTransportControlsEnabled="False" Stretch="Uniform"/>
        <local:ControlBar x:Name="_MediaPlayer_ControlBar" />
    </Grid>
</Page>
